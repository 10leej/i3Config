TargetDev='<bluez_sink.E8_07_BF_04_1C_08.a2dp_sink>'

while read; do
	if [[ $TargetFound == True && $REPLY =~ ^[[:space:]]+volume: ]]; then
		for Field in $REPLY; {
			(( ++FieldNr == 3 )) || continue

			if (( Field < 65536 )); then
				pactl set-sink-volume '@DEFAULT_SINK@' +500
			fi
		}
	elif [[ $REPLY == *$TargetDev* ]]; then
		TargetFound='True'
	fi
done <<< "$(pacmd list-sinks)"
