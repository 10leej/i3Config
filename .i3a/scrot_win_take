#!/bin/bash

#----------------------------------------------------------------------------------
# Project Name      - $HOME/.i3a/scrot_win_take
# Started On        - Fri 27 Oct 14:55:25 BST 2017
# Last Change       - Fri 27 Oct 14:56:39 BST 2017
# Author E-Mail     - terminalforlife@yahoo.com
# Author GitHub     - https://github.com/terminalforlife
#----------------------------------------------------------------------------------

[ $UID -eq 0 ] && exit 1

{ [ -x /usr/bin/scrot ] && [ -x /usr/bin/paplay ]; } && {
	printf -v FILENAME "$HOME/Desktop/Windowshot_%(%F_%X)T.png"
	SOUND03="/usr/share/sounds/freedesktop/stereo/screen-capture.oga"

	[ -f "$SOUND03" ] || exit 1

	/usr/bin/scrot -u -zq 100 "$FILENAME" && {
		/usr/bin/paplay --volume 40000 "$SOUND03"
	}
}
