# This is the i3blocks configuration file for the top bar. This also assumes a
# screen resolution of 1920x1080, in order for the text to fit properly.
#----------------------------------------------------------------------------------

separator_block_width=45
#separator_block_width=31
markup=none
color=#ffffff

[githubtodos]
label= GHTODO:
command=/bin/bash $HOME/.libi3bview github_todos
separator=false
interval=60

[githubfollows]
label= GHF:
command=/bin/bash $HOME/.libi3bview github_follows
separator=false
interval=1800

[githubcontribs]
label= GHC:
command=/bin/bash $HOME/.libi3bview github_contribs
separator=false
interval=1800

[ytsubcount]
label= YTS:
command=/bin/bash $HOME/.libi3bview ytsubcount
separator=false
interval=1800

[yttotalviews]
label= YTV:
command=/bin/bash $HOME/.libi3bview ytviewcount
separator=false
interval=1800

[upgradecount]
label= APT:
command=/bin/bash $HOME/.libi3bview apt_pkg_changes
separator=false
interval=3600

[psacount]
label= RS:
command=/bin/bash $HOME/.libi3bview psa_count
separator=false
interval=1

[usbcount]
label= USB:
command=/bin/bash $HOME/.libi3bview usb_count
separator=false
interval=1

[usercount]
label= USERS:
command=/bin/bash $HOME/.libi3bview user_count
separator=false
interval=1

[mountcount]
label= MOUNTS:
command=/bin/bash $HOME/.libi3bview mount_count
separator=false
interval=1

[cpu_temp_alt]
label= CPU-TEMP:
command=/bin/bash $HOME/.libi3bview cpu_temp_alt
separator=false
interval=1

[kernel_version]
label= KERNL:
command=/bin/bash $HOME/.libi3bview kernel_check
separator=false
interval=3600

